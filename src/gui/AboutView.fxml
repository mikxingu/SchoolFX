<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="143.0" prefWidth="308.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AboutViewController">
   <children>
      <Label text="About">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="20.0" top="10.0" />
         </padding>
      </Label>
      <Label text="SchoolFX application">
         <padding>
            <Insets bottom="10.0" left="20.0" top="10.0" />
         </padding>
      </Label>
      <Label fx:id="versionLabel" alignment="CENTER" text="0.0">
         <graphic>
            <Label alignment="CENTER" text="Version: ">
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="20.0" top="10.0" />
               </padding>
            </Label>
         </graphic>
      </Label>
      <ImageView fx:id="githubImage" fitHeight="27.0" fitWidth="44.0" onMouseClicked="#onGithubHyperlinkAction" pickOnBounds="true" preserveRatio="true" smooth="false" translateX="180.0" translateY="30.0" VBox.vgrow="ALWAYS">
         <image>
            <Image url="@icon/github.png" />
         </image>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" top="10.0" />
         </VBox.margin>
      </ImageView>
      <Label text="Developed by mikxingu">
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
